@model IEnumerable<DemoGHang.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    var a = ViewData["mess"]; ;
}
<h1>@a</h1>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SanPhamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPhamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SanPhamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPhamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { idSanPham=item.SanPhamId }) |
                    @Html.ActionLink("Details", "Details", new { idSanPham = item.SanPhamId }) |
                    @Html.ActionLink("Delete", "Delete", new { idSanPham = item.SanPhamId })
                    @using (Html.BeginForm("AddToCart", "SanPham", FormMethod.Post))
                    {
                        @Html.Hidden("ID", item.SanPhamId) <!-- Thay yourIdValue bằng giá trị id thực tế -->
                        <div class="form-group">
                            <label for="quantity" class="control-label">Quantity:</label>
                            <input type="text" name="soluong" id="soluong" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add to Cart" class="btn btn-default" />
                        </div>
                    }

            </td>
        </tr>
}
    </tbody>
</table>
